#layermanager
  .dropdown-menu
    height: auto
    max-height: calc(100vh - 100px)
    overflow-x: hidden
  li
    position relative
    width: 300px
    cursor: pointer
    white-space: nowrap
    overflow: hidden
    padding: 0
    &.dropdown-item.active,
    &.dropdown-item:active
      color: inherit
      text-decoration: none
      background-color: inherit
    label
      display: block
      padding: 0.25rem 1.5rem
      margin: 0
    .dot
      height: 6px
      width: 6px
      background: #ccc
      border-radius: 50%
      display: inline-block
      overflow: hidden
    .color
      position: absolute
      width: 20px
      top: 0px
      left: 0px
      padding: 0.25rem 0
      overflow: hidden
      .colorpicker
        display: inline-block
        height: 20px
        width: 20px
        .dot
          margin: 7px
      input
        border: 0
        width:20px;
        height:20px;
        position:absolute
        left: 21px
    .layer-tools
      position: absolute
      padding: 0.25rem 6px
      top: 0
      right: 0
      background: white
      a
        display: inline-block
        padding 0 3px
        color inherit
        width: 20px
        text-align: center
        &.sort-handle
          cursor: ns-resize
          .dot
            margin-bottom: 1px
        &.layer-labels
          color: #ccc
          &.active
            color: rgb(33, 37, 41)
